<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentFood">

    <ProgressBar
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="234dp"
            android:layout_height="42dp"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="281dp"
            android:layout_height="145dp" app:srcCompat="@drawable/menu" android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.005"/>
    <TextView
            android:text="@string/txt_food"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:id="@+id/textView"
            android:textSize="34sp" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.522"/>
    <Button
            android:text="@string/btn_food"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSetFood"
            android:background="@drawable/personalized_button"
            android:onClick="handleBtnSetFood"
            android:textColorHighlight="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintVertical_bias="0.25"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/webViewLastSupplyFood"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <WebView
            android:layout_width="351dp"
            android:layout_height="167dp"
            android:id="@+id/webViewLastSupplyFood"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/webViewHooperState"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"/>
    <WebView
            android:layout_width="351dp"
            android:layout_height="124dp"
            android:id="@+id/webViewHooperState"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
