<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentLogin">

    <ImageView
            android:layout_width="278dp"
            android:layout_height="244dp" app:srcCompat="@drawable/menu" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="@string/txt_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textSize="34sp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.514"
            android:layout_marginTop="4dp" app:layout_constraintBottom_toTopOf="@+id/btnSetFood"
            app:layout_constraintVertical_bias="0.309"/>
    <Button
            android:text="@string/btn_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSetFood"
            android:background="@drawable/personalized_button"
            android:onClick="handleBtnSetFood"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.588"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            android:textColorHighlight="@color/black" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>