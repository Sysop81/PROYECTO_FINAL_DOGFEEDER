<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/swipeRegisterFragment"
                                                   tools:context=".FragmentRegister">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="234dp"
                android:layout_height="42dp"
                android:id="@+id/progressBar"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:layout_width="96dp"
                android:layout_height="99dp" app:srcCompat="@drawable/logobig" android:id="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="0.257"/>
        <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/turquoise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/txt_title"
                app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="@string/app_name"
                android:textSize="34sp" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txt_title"
                app:layout_constraintHorizontal_bias="0.612"
                app:layout_constraintVertical_bias="0.66"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txtRegisterEmail"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                android:textSize="34sp" android:textStyle="bold"
                app:layout_constraintVertical_bias="0.651" app:layout_constraintHorizontal_bias="0.496"/>
        <com.google.android.material.textfield.TextInputLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                app:layout_constraintVertical_bias="0.72" android:id="@+id/txtPassword2">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/txt_password2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                app:layout_constraintVertical_bias="0.580" android:id="@+id/txtPassword">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/password"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- btn verify code -->
        <Button
                android:text="@string/btn_get_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnGetVerifiCode"
                android:onClick="handleBtnVerifyCode"
                android:background="@drawable/personalized_button"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" android:layout_marginTop="148dp"
                android:layout_marginStart="25dp" android:layout_marginEnd="25dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <Button
                android:visibility="invisible"
                android:text="@string/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegister"
                android:onClick="handleBtnRegister"
                android:background="@drawable/personalized_button"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" android:layout_marginTop="148dp"
                android:layout_marginStart="25dp" android:layout_marginEnd="25dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:visibility="invisible"
                android:text="@string/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnLogin"
                android:onClick="handleBtnLogin"
                android:background="@drawable/personalized_button"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRegister" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.216" android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp" app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="@string/txt_password"
                android:visibility="invisible"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textPassword"
                app:layout_constraintBottom_toTopOf="@+id/txtPassword" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.091"
                app:layout_constraintTop_toBottomOf="@+id/txtRegisterEmail" app:layout_constraintVertical_bias="1.0"
                android:textStyle="bold"/>
        <TextView
                android:text="@string/txt_email"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textEmail"
                app:layout_constraintBottom_toTopOf="@+id/txtRegisterEmail" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                android:layout_marginBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                app:layout_constraintVertical_bias="0.437" android:id="@+id/txtRegisterEmail"
                app:layout_constraintHorizontal_bias="0.0">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_email"
                    tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toBottomOf="@+id/txt_title"
                    android:layout_marginTop="48dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Código de verificación de email -->
        <TextView
                android:visibility="invisible"
                android:text="@string/txt_cod_recovery"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textVerifyCode"
                app:layout_constraintBottom_toTopOf="@+id/txtRegisterEmail" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                android:layout_marginBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                app:layout_constraintVertical_bias="0.437" android:id="@+id/txtRegisterVerifyCode"
                app:layout_constraintHorizontal_bias="0.0">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/placeholder_verify_code"
                    tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toBottomOf="@+id/txt_title"
                    android:layout_marginTop="48dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:visibility="invisible"
                android:text="@string/txt_password2"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textPassword2"
                android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.114"
                app:layout_constraintBottom_toTopOf="@+id/txtPassword2"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" app:layout_constraintVertical_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>