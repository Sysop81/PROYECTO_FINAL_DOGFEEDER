<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentRecoveryPassword">


    <Button
            android:text="@string/btn_recovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecoveryPass"
            android:onClick="handleBtnRecovery"
            android:background="@drawable/personalized_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.746"/>

    <Button
            android:visibility="invisible"
            android:text="@string/btn_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnVerifyCode"
            android:onClick="handleBtnVerifyCode"
            android:background="@drawable/personalized_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.746"/>

    <Button
            android:visibility="invisible"
            android:text="@string/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnChangePassword"
            android:onClick="handleBtnChangePassword"
            android:background="@drawable/personalized_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.746"/>

    <ImageView
            android:src="@drawable/logobig"
            android:layout_width="230dp"
            android:layout_height="203dp" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textEmail" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.78"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="@string/txt_email"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.107" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtEmail" app:layout_constraintVertical_bias="1.0"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintVertical_bias="0.4" android:id="@+id/txtEmail"
            app:layout_constraintHorizontal_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/placeholder_email"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
            android:visibility="invisible"
            android:text="@string/txt_cod_recovery"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textVerifyCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.107" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtEmail" app:layout_constraintVertical_bias="1.0"/>
    <com.google.android.material.textfield.TextInputLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintVertical_bias="0.4" android:id="@+id/txtVerifyCode"
            app:layout_constraintHorizontal_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/placeholder_verify_code"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:visibility="invisible"
            android:text="@string/txt_password"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textPassword"
            app:layout_constraintBottom_toTopOf="@+id/txtPassword" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" app:layout_constraintVertical_bias="1.0"
            android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintVertical_bias="0.580" android:id="@+id/txtPassword">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/password"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:visibility="invisible"
            android:text="@string/txt_password2"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textPassword2"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintBottom_toTopOf="@+id/txtPassword2"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword" app:layout_constraintVertical_bias="1.0"/>

    <com.google.android.material.textfield.TextInputLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintVertical_bias="0.72" android:id="@+id/txtPassword2">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/txt_password2"/>
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>